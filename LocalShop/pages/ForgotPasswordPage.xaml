<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalShop.pages.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"  Margin="10">
            <Entry x:Name="entryEmail" Placeholder="Enter Your MailId" Keyboard="Email"/>
            <Button Margin="10" Text="Send" Clicked="SendPassword"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>